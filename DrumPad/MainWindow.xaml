            <RadioButton Foreground="CornflowerBlue"
                         Background="Wheat"
                         FontFamily="Cambria"
                         Checked="ToggleButton_OnChecked" 
                         Content="Soundpool 2" />
            <RadioButton Foreground="CornflowerBlue"
                         Background="Wheat"
                         FontFamily="Cambria"
                         Checked="ToggleButton_OnChecked" 
