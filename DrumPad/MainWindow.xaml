               Foreground="Aqua" />
        <Button
            x:Name="bt_0"
            Content="_0"
            Opacity="0"
            BorderThickness="0"
            Click="PlaySound"
            Canvas.Left="75" Height="54" Canvas.Top="6" Width="104" />


        <Ellipse x:Name="E1"
                 Width="98"
                 Height="66"
                 Fill="DarkGoldenrod"
                 Opacity="0.2" Canvas.Left="258" Canvas.Top="26" RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform AngleY="-7.667" />
                    <RotateTransform />
