<Window x:Class="Binding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binding"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="600">
   <Grid>
       <Grid.ColumnDefinitions>
           <ColumnDefinition Width="220"></ColumnDefinition>
           <ColumnDefinition Width="*"></ColumnDefinition>
       </Grid.ColumnDefinitions>
       <StackPanel >
           <Button Content ="Binding" Click="loadBindingIntro" ></Button>
           <Button Content ="Binding - Intro" Click="loadBindingIntroExcersice"></Button>
           <Button Content="Binding -Richtung" Click="loadBindingDirection"></Button>
           <Button Content="Übung ext Daten" Click="loadBindingExternal"></Button>
       </StackPanel>
       <Frame Grid.Column="1" x:Name="FrameContent" NavigationUIVisibility="Hidden"></Frame>
   </Grid>
</Window>
